# =============================================================================
# SIGNUP AUTOMATION - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your credentials

# -----------------------------------------------------------------------------
# PROXY CONFIGURATION (Smartproxy / Decodo)
# -----------------------------------------------------------------------------
PROXY_HOST=gate.decodo.com
PROXY_PORT=10001
PROXY_USERNAME=your_username
PROXY_PASSWORD=your_password

# -----------------------------------------------------------------------------
# BROWSER CONFIGURATION
# -----------------------------------------------------------------------------
HEADLESS=false
SLOW_MO=50
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=60000

# -----------------------------------------------------------------------------
# DATA PATHS
# -----------------------------------------------------------------------------
PHONE_LIST_PATH=./data/phones/airbnb_phones.txt
USED_PHONES_PATH=./data/phones/used_phones.json
ACCOUNTS_OUTPUT_PATH=./data/accounts/

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_DIR=./logs

# -----------------------------------------------------------------------------
# RETRY CONFIGURATION
# -----------------------------------------------------------------------------
MAX_RETRIES=3
RETRY_DELAY=5000
